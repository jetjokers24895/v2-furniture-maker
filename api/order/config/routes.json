{
  "routes": [
    {
      "method": "GET",
      "path": "/order",
      "handler": "Order.find",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/order/count",
      "handler": "Order.count",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/order/:_id",
      "handler": "Order.findOne",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/order",
      "handler": "Order.create",
      "config": {
        "policies": [
          "global.setOwner"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/order/:_id",
      "handler": "Order.update",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/order/:_id",
      "handler": "Order.destroy",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    }
  ]
}