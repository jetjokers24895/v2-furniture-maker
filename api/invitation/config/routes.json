{
  "routes": [
    {
      "method": "GET",
      "path": "/invitations",
      "handler": "Invitation.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/invitations/count",
      "handler": "Invitation.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/invitations/:_id",
      "handler": "Invitation.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/invitations/code/:code",
      "handler": "Invitation.findOneByCode",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/invitations",
      "handler": "Invitation.create",
      "config": {
        "policies": [
          "global.setOwner"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/invitations/:_id",
      "handler": "Invitation.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/invitations/join/:_id",
      "handler": "Invitation.join",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/invitations/:_id",
      "handler": "Invitation.destroy",
      "config": {
        "policies": []
      }
    }
  ]
}
