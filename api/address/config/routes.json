{
  "routes": [
    {
      "method": "GET",
      "path": "/address",
      "handler": "Address.find",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/address/count",
      "handler": "Address.count",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/address/:_id",
      "handler": "Address.findOne",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/address",
      "handler": "Address.create",
      "config": {
        "policies": [
          "global.setOwner"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/address/:_id",
      "handler": "Address.update",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/address/:_id",
      "handler": "Address.destroy",
      "config": {
        "policies": [
          "global.isOwner"
        ]
      }
    }
  ]
}